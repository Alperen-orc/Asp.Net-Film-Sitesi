@model AdminMoviesViewModel
@inject LanguageService language

<h1> @language.Getkey("List")</h1>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th style="width:30px">#</th>
            <th style="width:100px">@language.Getkey("Image")</th>
            <th>@language.Getkey("Title")</th>
            <th style="width:200px">@language.Getkey("Genres")</th>
            <th style="width:160px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
        <tr>
            <td>@movie.MovieId</td>
            <td><img src="~/img/@movie.ImageUrl" width="80" /></td>
            <td>@movie.Title</td>
            <td>
                <ul>
                    @foreach (var genre in movie.Genres)
                    {
                        <li>@genre.Name</li>
                    }
                </ul>
            </td>
            <td>
                    <a href="/admin/movieupdate/@movie.MovieId" class="btn btn-primary btn-sm">@language.Getkey("Update") </a>
                <form action="/admin/moviedelete" method="post" style="display:inline">
                    <input type="hidden" name="movieId" value="@movie.MovieId" />
                        <button type="submit" class="btn btn-danger btn-sm">@language.Getkey("Delete")</button>
                </form>

            </td>
        </tr>
        }
    </tbody>
</table>
